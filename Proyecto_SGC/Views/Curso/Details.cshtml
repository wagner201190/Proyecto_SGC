@model Proyecto_SGC.Curso

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreCurso)
        </dd>

        <dt>
            Precio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio_Curso)
        </dd>

        <dt>
            Creditos
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Creditos)
        </dd>

        <dt>
            Plan de Estudio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlanEstudio.NombrePlanEstudio)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Modificar", "Edit", new { id = Model.ID_Curso }) |
    @Html.ActionLink("Regresar", "Index")
</p>
